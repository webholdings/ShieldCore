# Database Configuration
# PostgreSQL connection string (Neon recommended)
# Format: postgresql://user:password@host:5432/database?sslmode=require
DATABASE_URL=postgresql://user:password@host:5432/creativewaves

# Separate PostgreSQL connection parameters (auto-generated from DATABASE_URL by Replit)
PGHOST=your-db-host.neon.tech
PGDATABASE=creativewaves
PGUSER=your-username
PGPASSWORD=your-password
PGPORT=5432

# Firebase Configuration 
# Path to Firebase service account JSON file for local development
# Download from Firebase Console → Project Settings → Service Accounts → Generate New Private Key
# Save as service-account.json in project root (already in .gitignore)
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Session Secret
# Now managed via Firebase Secrets Manager
# Use: firebase functions:secrets:set SESSION_SECRET
# SESSION_SECRET=your-random-session-secret-minimum-32-characters


# Email Service (Brevo)
# Get your API key from https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here

# WooCommerce Integration
# WordPress/WooCommerce site URL (without trailing slash)
WOOCOMMERCE_URL=https://buy.creativewaves.me
# REST API credentials from WooCommerce → Settings → Advanced → REST API
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret_here
# Secret for verifying webhook signatures from WooCommerce
# Set this in WooCommerce webhook settings and here
WOOCOMMERCE_WEBHOOK_SECRET=your-webhook-secret-here

# AI Assistant (OpenRouter)
# Get your API key from https://openrouter.ai/
# For Firebase Functions: Set using `firebase functions:secrets:set OPENROUTER_API_KEY`
# For local development: Add to .env file
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Application URL
# Used for generating links in emails (magic links, login links)
# Priority: APP_URL > REPLIT_DOMAINS > REPLIT_DEV_DOMAIN > localhost
# Production: Set to your custom domain
APP_URL=https://app.creativewaves.me

# Environment
# Set to "production" in production, "development" for local dev
NODE_ENV=development

# Database Seeding (Optional)
# Allow database seeding in non-production environments
# Set to "true" to enable /api/admin/* endpoints outside production
ALLOW_DATABASE_SEEDING=false

# Replit-specific (auto-set by Replit, don't modify)
# REPLIT_DOMAINS=your-app.replit.app
# REPLIT_DEV_DOMAIN=your-repl-slug.replit.dev
