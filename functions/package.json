{
    "name": "functions",
    "scripts": {
        "build": "node build.js",
        "build:local": "esbuild src/index.ts --platform=node --bundle --format=cjs --outfile=lib/index.cjs --external:firebase-functions --external:firebase-admin --external:express --external:zod --external:ws --external:dotenv",
        "build:watch": "npm run build -- --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "20"
    },
    "type": "module",
    "main": "lib/index.cjs",
    "dependencies": {
        "dotenv": "^17.2.3",
        "esbuild": "^0.27.0",
        "express": "^4.21.2",
        "express-session": "^1.18.2",
        "firebase-admin": "^13.6.0",
        "firebase-functions": "^7.0.2",
        "ws": "^8.18.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "firebase-functions-test": "^3.1.0",
        "typescript": "^5.0.0"
    },
    "private": true,
    "files": [
        "lib",
        ".env",
        "package.json",
        "package-lock.json"
    ]
}
